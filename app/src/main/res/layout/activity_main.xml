<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_yellow"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@drawable/cl_card_yellow"
            app:layout_constraintEnd_toStartOf="@id/gl_v_end"
            app:layout_constraintStart_toStartOf="@id/gl_v_start"
            app:layout_constraintTop_toTopOf="@id/gl_h_start"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_gray_a"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:background="@drawable/cl_card_gray"
            android:layout_marginTop="@dimen/card_space"
            app:layout_constraintEnd_toStartOf="@id/gl_v_end"
            app:layout_constraintStart_toStartOf="@id/gl_v_start"
            app:layout_constraintTop_toBottomOf="@id/cl_yellow"
            android:padding="@dimen/card_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/gray_50"
                android:textSize="@dimen/card_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_gray_b"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:background="@drawable/cl_card_gray"
            android:layout_marginTop="@dimen/card_space"
            app:layout_constraintEnd_toStartOf="@id/gl_v_end"
            app:layout_constraintStart_toStartOf="@id/gl_v_start"
            app:layout_constraintTop_toBottomOf="@id/cl_gray_a"
            android:padding="@dimen/card_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textStyle="bold"
                android:textColor="@color/gray_50"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_gray_c"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:background="@drawable/cl_card_gray"
            android:layout_marginTop="@dimen/card_space"
            app:layout_constraintEnd_toStartOf="@id/gl_v_end"
            app:layout_constraintStart_toStartOf="@id/gl_v_start"
            app:layout_constraintTop_toBottomOf="@id/cl_gray_b"
            android:padding="@dimen/card_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textStyle="bold"
                android:textColor="@color/gray_50"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_gray_d"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:background="@drawable/cl_card_gray"
            android:layout_marginTop="@dimen/card_space"
            app:layout_constraintEnd_toStartOf="@id/gl_v_end"
            app:layout_constraintStart_toStartOf="@id/gl_v_start"
            app:layout_constraintTop_toBottomOf="@id/cl_gray_c"
            android:padding="@dimen/card_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textStyle="bold"
                android:textColor="@color/gray_50"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_gray_e"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:background="@drawable/cl_card_gray"
            android:layout_marginTop="@dimen/card_space"
            app:layout_constraintEnd_toStartOf="@id/gl_v_end"
            app:layout_constraintStart_toStartOf="@id/gl_v_start"
            app:layout_constraintTop_toBottomOf="@id/cl_gray_d"
            android:padding="@dimen/card_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E"
                android:textStyle="bold"
                android:textColor="@color/gray_50"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/big_card_height"
            android:layout_marginTop="@dimen/card_space"
            android:background="@drawable/cl_card_dark_gray"
            app:layout_constraintBottom_toTopOf="@id/gl_h_end"
            app:layout_constraintEnd_toStartOf="@id/gl_v_end"
            app:layout_constraintStart_toStartOf="@id/gl_v_start"
            app:layout_constraintTop_toBottomOf="@id/cl_gray_e"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/app_padding" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/app_padding"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_h_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/app_padding"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_h_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/app_padding"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>